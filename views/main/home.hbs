<div class="hero">
	<div class="container">
		<div class="row">
			<div class="hero-heading">
				Service for lean entrepreneur <br />
				Find it on Threely.
				<p>Browse. Buy. Done. </p>
			</div>
		</div>
		<div class="row">
			<div class="col-md-offset-3 col-md-6">
				<form action="/search" method="post">
					<div class="input-group">
						<input type="text" class="form-control" name="search_input" placeholder="What are you searching?">
						<span class="input-group-btn">
							<input type="submit" class="btn btn-success" id="home-search" value="Search">
						</span>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
<div class="container section">
	<h1>
		Newest artworks
	</h1>
	<div class="row">
		{{#each artwork}}
		<div class="col-md-3">
			<div class="artwork-card">
				<a href="/artwork_details/{{ _id }}"><img src="{{ picture }}" /></a>
				<h4>
					{{ title }}
				</h4>
				<h3>
					${{ price }}
				</h3>
			</div>
		</div>
		{{/each}}
	</div>
</div>