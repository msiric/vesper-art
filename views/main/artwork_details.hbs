<div class="service-details-message notif"></div>
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="overview">
        <input type="hidden" value="{{ artwork._id }}" id="artwork_id">
        <div class="template-card">
          <div class="name">
            <h2 class="h2-size">{{ artwork.title }}</h2>
            <hr>
            <img src="{{ artwork.picture }}" class="image-test">
          </div>
        </div>
      </div>

      <div class="overview">
        <div class="about-card">
          <div class="name">
            <h2 class="h2-size">About artwork</h2>
            <hr>
            <h4>{{ artwork.about }}</h4>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="overview">
        <div class="order-card">
          <div class="name">
            <h3>Artwork price</h3>
            <h4>${{ artwork.price }}</h4>
            <a href="/checkout/single_package/{{artwork._id}}" class="btn btn-success">Proceed to order</a>
            {{#if inCart}}
            <a href="/checkout/process_cart" class="btn btn-success" id="in-cart">In cart</a>
            {{ else }}
            <button class="btn btn-success" id="add-to-cart"><i class="fa fa-shopping-cart"></i></button>
            {{/if}}
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="overview">
        <div class="artist-card">
          <div class="name">
            <h3>Artist details</h3>
            <hr>
            <h4>{{ artwork.owner.name }}</h4>
            <img class="img-circle" src="{{ artwork.owner.photo }}" />
            <br>
            {{#if artwork.owner.about}}
            <h4>{{ artwork.owner.about }}</h4>
            {{ else }}
            <h4>No further information about this artist</h4>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>