<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="overview">
        <div class="template-card">
          <div class="name">
            <h2 class="h2-size">{{gig.title}}</h2>
            <hr>
            <img src="{{gig.picture}}" class="image-test">
          </div>
        </div>
      </div>

      <div class="overview">
        <div class="about-card">
          <div class="name">
            <h2 class="h2-size">About gig</h2>
            <hr>
            <h4>{{gig.about}}</h4>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="overview">
        <div class="order-card">
          <div class="name">
            <h3>${{gig.price}} Order details</h3>
            <a href="/checkout/single_package/{{gig._id}}" class="btn btn-success">Proceed to order</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>