<div class="container">
  <h1 class="text-center">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="overview">
          <div class="add-artwork-card">
            <p class="text-center" style="margin-top: 50px">
              <a href="/add-new-artwork" class="btn btn-success">Add new artwork</a>
            </p>
          </div>
        </div>

        <div class="overview">
          <div class="list-orders-card">
            <div class="table-margin">
              <table class="table">
                <thead>
                  <tr>
                    <th scope="col">Artwork</th>
                    <th scope="col">Title</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each artwork}}
                  <tr>
                    <td><img class="order-image-my-artwork" src="{{ picture }}"></td>
                    <td>{{ title }}</td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </h1>
</div>