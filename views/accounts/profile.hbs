<div class="container">
  <h1 class="text-center">Profile</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="overview">
        <div class="profile-card">
          <img id="profile-photo" class="img-circle" src=" {{ user.photo }} " />
          <br>
          <div class="btn btn-rounded float-left">
            <span>Add photo</span>
            {{#if user.rating}}
            <p>{{ user.rating }}/5</p>
            {{else}}
            <p>No rating yet</p>
            {{/if}}
            <input id="profile-photo-upload" type="file">
          </div>
          <div class="new-artwork-card">
            {{#if message }}
            <div class="alert alert-success alert-dismissible">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                  aria-hidden="true">&times;</span></button>
              {{ message  }}
            </div>
            {{/if}}
            <form action="" method="post">
              <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" value="{{ user.name }}" name="name">
              </div>

              <div class="form-group">
                <label>Email</label>
                <input type="email" class="form-control" value="{{ user.email }}" name="email">
              </div>

              <div class="form-group">
                <label>About</label>
                <textarea type="text" class="form-control" value="{{ user.about }}" name="about"></textarea>
              </div>

              <button type="submit" class="btn btn-success">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>