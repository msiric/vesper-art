<div class="single-package-message notif"></div>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="overview">
        <div class="single-order-package-card">
          <div class="margin-both">
            <h2 class="text-center">Summary</h2>
            <hr>
            <div class="inner">
              <img src="{{ gig.picture }}" class="img-circle">
              <br>
              <p class="text-center">{{ gig.title }}</p>
            </div>
            <hr>
            <div class="promocode-panel">
              {{#if discount}}
              <p class="promocode-amount">Discount: {{ discount }}%</p>
              <a class="btn btn-danger remove-promocode" id="{{ promo }}">Remove promo code</a>
              {{ else }}
              <div class="input-group promocode">
                <input type="text" class="form-control" placeholder="Enter promocode" id="code">
                <span class="input-group-btn">
                  <button class="btn btn-success btn-block" id="promocodeButton">Apply</button>
                </span>
              </div>
              {{/if}}
            </div>
            <hr>
            <div class="space-between">
              <h4><span>Subtotal:</span><span class="dollar fee"><span id="subtotal">{{ subtotal }}</span></span></h4>
            </div>
            <div class="space-between">
              <h4><span>Fee:</span><span class="dollar fee">$3.15</span></h4>
            </div>
            <hr>
            <div class="space-between">
              <h3><span>Total:</span><span class="dollar fee">$<span id="totalPrice">{{ totalPrice }}</span></span>
              </h3>
            </div>
            <a href="/payment" class="btn btn-success proceed-btn">Proceed to payment</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>