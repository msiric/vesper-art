<div class="container">
  <h1 class="text-center">Manage Orders</h1>
  <div class="row">
    <div class="overview">
      <div class="list-orders-card">
        <div class="table-margin">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Artwork</th>
                <th scope="col">Price</th>
                <th scope="col">Status</th>
                <th scope="col">Time</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              {{#if order}}
              {{#each order}}
              <tr>
                <td><img class="order-image-my-artwork" src="{{ artwork.cover }}"><span
                    class="artwork-title">{{ artwork.title }}</span></td>
                <td>${{ artwork.price }}</td>
                <td><button class="btn btn-{{ formatButton status }}">{{ formatStatus status }}</button></td>
                <td>{{ formatDate created 'DD/MM/YYYY HH:mm:ss' }}</td>
                <td><a href="/users/{{ seller._id }}/orders/{{ _id }}" class="btn btn-primary">Order page</a>
                </td>
              </tr>
              {{/each}}
              {{ else }}
              <tr>
                <td class="no-orders" colspan="5"><br><br>No orders at the moment <br><br> Gain exposure to your artwork
                  and keep in touch with other users!</td>
              </tr>
              {{/if}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>