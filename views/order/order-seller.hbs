<div class="container">
  <h1 class="text-center">Manage Orders</h1>
  <div class="row">
    <div class="overview">
      <div class="list-orders-card">
        <div class="table-margin">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Gig</th>
                <th scope="col">Price</th>
                <th scope="col">Status</th>
              </tr>
            </thead>
            <tbody>
              {{#each gigs}}
              <tr>
                <td><img class="order-image-my-gig" src="{{ gig.picture }}"><span>{{ gig.title }}</span></td>
                <td>${{ gig.price }}</td>
                <td><button class="btn btn-warning">In progress</button></td>
                <td><a href="/users/{{ seller._id }}/orders/{{ _id }}" class="btn btn-primary">Chat with buyer</a>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>