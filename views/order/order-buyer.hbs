<div class="container">
  <h1 class="text-center">Manage Orders</h1>
  <div class="row">
    <div class="overview">
      <div class="list-orders-card">
        <div class="table-margin">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Artwork</th>
                <th scope="col">Price</th>
                <th scope="col">Status</th>
                <th scope="col">Time</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              {{#each order}}
              <tr>
                <td><img class="order-image-my-artwork" src="{{ artwork.picture }}"><span
                    class="artwork-title">{{ artwork.title }}</span></td>
                <td>${{ artwork.price }}</td>
                <td><button class="btn btn-warning">{{ formatStatus status }}</button></td>
                <td>{{ formatDate created 'DD/MM/YYYY HH:mm:ss' }}</td>
                <td><a href="/users/{{ buyer._id }}/orders/{{ _id }}" class="btn btn-primary">Chat with seller</a>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>